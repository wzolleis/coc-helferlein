{
  "extends": [
    "tslint-react"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-constant-condition": true,
    "jsx-alignment": false,
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false,
    "quotemark": [
      true,
      "single"
    ]
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ]
}